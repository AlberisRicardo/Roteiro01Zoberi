<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aytycap.roteiro01.CadastroActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Cadastro Do Usuário"
        android:id="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/nome"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:hint="Nome"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/sobrenome"
        android:layout_below="@+id/nome"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="41dp"
        android:hint="Sobrenome"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/usuario"
        android:hint="Nome Do Usuário"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/btm"
        android:layout_alignStart="@+id/btm" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/senha"
        android:hint="Senha"
        android:layout_below="@+id/usuario"
        android:layout_alignLeft="@+id/nome"
        android:layout_alignStart="@+id/nome"
        android:inputType="textPassword"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/confiSenha"
        android:layout_marginTop="58dp"
        android:hint="Confirmar Senha"
        android:layout_below="@+id/usuario"
        android:layout_centerHorizontal="true"
        android:inputType="textPassword"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/btm"
        android:text="Fazer Cadastro"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/confiSenha"
        android:layout_alignEnd="@+id/confiSenha" />

</RelativeLayout>
